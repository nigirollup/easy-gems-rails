<%= simple_form_for @article do |f| %>
<%= f.input :title %>
<%= f.input :preface %>
<%= f.input :introduction %>
<%= f.input :category_id, collection: @categories %>
<%= f.bootsy_area :description, class: 'form-control', rows: 20 %>
<%= f.input :picture, as: :attachinary %>
<%= f.submit %>
<% end %>
